<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:paddingBottom="@dimen/activity_vertical_margin"
	android:paddingLeft="@dimen/activity_horizontal_margin"
	android:paddingRight="@dimen/activity_horizontal_margin"
	android:paddingTop="@dimen/activity_vertical_margin"
	android:orientation="vertical" >
	
	<EditText
		android:id="@+id/telephone_number"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:inputType="phone"
		android:enabled="false" />

	<GridLayout
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_gravity="center_horizontal|center_vertical"
		android:rowCount="4"
		android:columnCount="5"
		android:orientation="horizontal" >
		
		<Button
			android:id="@+id/button_1"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_1" />
		
		<Button
			android:id="@+id/button_2"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_2" />
		
		<Button
			android:id="@+id/button_3"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_3" />
		
		<Button
			android:id="@+id/button_4"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_4" />
		
		<Button
			android:id="@+id/button_5"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_5" />
		
		<Button
			android:id="@+id/button_6"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_6" />
		
		<Button
			android:id="@+id/button_7"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_7" />
		
		<Button
			android:id="@+id/button_8"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_8" />
		
		<Button
			android:id="@+id/button_9"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_9" />
		
		<Button
			android:id="@+id/button_0"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_0" />
		
		<ImageButton
		    android:id="@+id/button_call"
		    android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical|center_horizontal"
			android:contentDescription="@string/call_description"
			android:src="@drawable/call" />
		
		<Button
			android:id="@+id/button_star"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_star" />
		
		<ImageView
			android:id = "@+id/backspace_image"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical|center_horizontal"
			android:contentDescription="@string/backspace_description"
			android:adjustViewBounds="true"
			android:src="@drawable/backspace" />
		
		<Button
			android:id="@+id/button_hashtag"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:text="@string/string_hashtag" />
		
		<ImageButton
		    android:id="@+id/button_hangup"
		    android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical|center_horizontal"
			android:contentDescription="@string/hangup_description"
			android:src="@drawable/hangup" />
		
		<ImageButton
		    android:id="@+id/button_contacts"
		    android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:layout_gravity="center_vertical|center_horizontal"
			android:layout_row="3"
			android:layout_column="2"
			android:contentDescription="@string/contacts_description"
			android:src="@drawable/contacts" />
	</GridLayout>
	
</LinearLayout>
